<div class="flex items-center justify-center bg-[#1e1e1e] w-screen mx-auto h-screen">
  <div class="bg-[#2f2f2f] shadow-lg rounded-xl p-8 w-full max-w-sm border border-gray-300">
    <h2 class="text-2xl font-bold text-center text-[#ffffff] mb-6">Admin Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-5") do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-white" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg outline-none shadow-sm text-white" %>
      </div>
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-white mt-5" %>
        <%= f.password_field :password, autocomplete: "current-password",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg outline-none shadow-sm text-white" %>
      </div>
      <div class="flex justify-between items-center mt-5">
        <%= f.submit "Sign In",
          class: "w-full bg-[#ffffff] hover:bg-[#1e1e1e] hover:text-white text-black font-semibold py-2 rounded-lg transition shadow-md" %>
      </div>
    <% end %>
  </div>
</div>
